<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".More"
    android:background="@drawable/waterbackground">

    <ImageButton
        android:id="@+id/dry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="39dp"
        android:background="#0000"
        android:contentDescription="@string/descr"
        android:src="@drawable/dryim"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="157dp" />

    <ImageButton
        android:id="@+id/prewash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="26dp"
        android:background="#0000"
        android:src="@drawable/prewash"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="157dp"
        android:contentDescription="@string/descr" />

    <ImageButton
        android:id="@+id/notifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:background="#0000"
        android:contentDescription="@string/descr"
        android:src="@drawable/notifier"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="157dp" />

    <TextView
        android:id="@+id/textDry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dry"
        android:layout_marginStart="62dp"
        android:text="@string/drying"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textWash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/dry"
        android:layout_marginEnd="41dp"
        android:text="@string/prewash"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textNotif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notifier"
        android:layout_centerHorizontal="true"
        android:text="@string/notifications"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="italic" />
</RelativeLayout>